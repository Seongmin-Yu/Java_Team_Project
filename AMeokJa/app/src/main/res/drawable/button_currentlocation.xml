<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="@android:color/white" />

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp" />

    <corners
        android:radius="5dp"/>

    <!-- 테두리 설정: 두께, 색상 -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" />

</shape>